{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "installCommand": "npm install --legacy-peer-deps --omit=optional",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "backend1/src/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "backend2/main.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/node/(.*)",
      "dest": "backend1/src/index.js"
    },
    {
      "src": "/api/python/(.*)",
      "dest": "backend2/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/dist/$1"
    }
  ]
}
